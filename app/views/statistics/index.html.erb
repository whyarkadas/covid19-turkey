<p id="notice"><%= notice %></p>

<h1>Statistics</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total infected</th>
      <th>Daily infected</th>
      <th>Total died</th>
      <th>Daily died</th>
      <th>Intubated</th>
      <th>Intensive care</th>
      <th>Total test</th>
      <th>Daily test</th>
      <th>Total recovered</th>
      <th>Daily recovered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.date %></td>
        <td><%= statistic.total_infected %></td>
        <td><%= statistic.daily_infected %></td>
        <td><%= statistic.total_died %></td>
        <td><%= statistic.daily_died %></td>
        <td><%= statistic.intubated %></td>
        <td><%= statistic.intensive_care %></td>
        <td><%= statistic.total_test %></td>
        <td><%= statistic.daily_test %></td>
        <td><%= statistic.total_recovered %></td>
        <td><%= statistic.daily_recovered %></td>
        <td><%= link_to 'Show', statistic %></td>
        <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
        <td><%= link_to 'Destroy', statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

